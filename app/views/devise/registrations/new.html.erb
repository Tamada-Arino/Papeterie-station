<h2><%= t('.sign_up') %></h2>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="mx-auto p-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field p-2">
      <%= f.label :name %> <span class="small bg-red text-light rounded p-1">必須</span><br />
      <%= f.text_field :name, class: "w-100", autofocus: true %>
    </div>
    <div class="field p-2">
      <%= f.label :email %> <span class="small bg-red text-light rounded p-1">必須</span><br />
      <%= f.email_field :email, class: "w-100", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field p-2">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %> <span class="small bg-red text-light rounded p-1">必須</span><br />
      <%= f.password_field :password, class: "w-100", autocomplete: "new-password" %>
    </div>
    <div class="field p-2">
      <%= f.label :password_confirmation %> <span class="small bg-red text-light rounded p-1">必須</span><br />
      <%= f.password_field :password_confirmation, class: "w-100", autocomplete: "new-password" %>
    </div>
    <div class="field p-2">
      <%= f.label :avatar, "プロフィール画像" %> <span class="small bg-alminium text-light rounded p-1">任意</span><br />
      <%= f.file_field :avatar %>
    </div>
    <div class="actions">
      <%= f.submit t('.sign_up'), class:"btn btn-success" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
