<h3><%= @user.name %></h3>
<h5>プロフィール</h5>
<%= image_tag @user.avatar.attached? ? @user.avatar : 'default_avatar.png', class: "avatar-large" %>
<p><%= @user.introduction %></p>
<% if user_signed_in? && @user.id == current_user.id %>
  <%= link_to users_profile_path do %>
    編集
  <% end %>
<% end %>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a href="#posts" class="nav-link <%= 'active' if params[:tab] == nil %>" data-bs-toggle="tab">投稿一覧</a>
  </li>
  <li class="nav-item">
    <a href="#favolites" class="nav-link <%= 'active' if params[:tab] == 'favorites' %>" data-bs-toggle="tab">お気に入り一覧</a>
  </li>
  <% if user_signed_in? && @user.id == current_user.id %>
    <li class="nav-item">
      <a href="#histories" class="nav-link <%= 'active' if params[:tab] == 'histories' %>" data-bs-toggle="tab">チェック履歴</a>
    </li>
  <% end %>
</ul>
<div class="tab-content">
  <div id="posts" class="tab-pane <%= 'active' if params[:tab] == nil %>">
    <div class="row">
      <% @user.products.each do |product| %>
        <div class="productBox bg-ink p-0 col-lg-3 col-md-4 col-sm-6 col-xs-6">
          <%= link_to product_path(product.id) do %>
            <%= image_tag "noimage.png", class: "product-image" %>
            <div class="p-2 text-light">
              <h5><%= product.name %></h5>
              <p><%= product.price unless product.price.nil? %></p>
              <%= image_tag current_user.avatar.attached? ? current_user.avatar : 'default_avatar.png', class: "avatar-small" %>
              <%= product.user.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div id="favolites" class="tab-pane <%= 'active' if params[:tab] == 'favorites' %>">
    <p>お気に入り一覧</p>
  </div>
  <% if user_signed_in? && @user.id == current_user.id %>
    <div id="histories" class="tab-pane <%= 'active' if params[:tab] == 'histories' %>">
      <p>チェック履歴</p>
    </div>
  <% end %>
</div>
