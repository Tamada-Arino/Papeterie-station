<h3>プロフィール編集</h3>
<%= render "shared/error", obj: current_user %>
<%= form_with model: current_user, url: users_profile_path do |f| %>
  <div class="field" >
    <%= f.label :avatar, "プロフィール画像" %><br />
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
  <%= f.label :introduction, "プロフィール" %><br />
  <%= f.text_area :introduction, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit"更新", class: "btn btn-primary" %>
  </div>
<% end %>
