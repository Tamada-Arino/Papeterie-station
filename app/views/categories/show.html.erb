<% provide(:title, @category.name) %>
<div class="p-3 row">
  <h3 class="col-sm-7">カテゴリー:<%= @category.name %>から探す</h3>
  <div class="col-sm-5 d-flex justify-content-end gap-2">
    <%= link_to products_path, class: "btn btn-alminium bg-alminium" do %>
      製品一覧へ
    <% end %>
    <%= link_to new_product_path, class: "btn btn-red bg-red text-light" do %>
      <i class="bi bi-plus-circle"></i> 製品を投稿
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-3 col-sm-4">
    <div class="accordion">
      <div class="accordion-item">
        <h2 class="accordion-header" id="Open-headingOne">
          <button class="accordion-button bg-alminium" type="button" data-bs-toggle="collapse" data-bs-target="#Open-collapseOne" aria-expanded="true" aria-controls="Open-collapseOne">
          キーワードで探す
          </button>
        </h2>
        <div id="Open-collapseOne" class="accordion-collapse collapse show" aria-labelledby="Open-headingOne">
          <div class="accordion-body">
            <%= render "shared/search_form", url: category_path(@category)  %>
          </div>
        </div>
      </div>
    </div>
    <%= render "shared/category_list" %>
  </div>
  <div class="col-lg-9 col-sm-8">
    <div class="row">
      <div class="d-flex justify-content-between w-100 bg-paper p-2">
        <p class="m-0">並べ替え：</p>
        <div class="d-flex gap-2">
          <%= sort_link(@q, :name, "名前順") %>
          <%= sort_link(@q, :created_at, "投稿日時") %>
        </div>
      </div>
      <%= render partial: 'shared/product_list', collection: @products, as: :product %>
    </div>
  </div>
</div>
